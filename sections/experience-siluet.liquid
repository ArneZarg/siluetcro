<section id="pilates-{{ section.id }}" {%comment %}class="pilates-hero ph--split ph--{{ section.settings.image_side }}"{% endcomment %}>
  {% comment %} <div class="ph__inner">

    <!-- TEXT COLUMN -->
    <div class="ph__textcol">
      {% if section.settings.heading_html != blank %}
        <h2 class="ph__heading">{{ section.settings.heading_html }}</h2>
      {% endif %}

      {% if section.settings.subheading != blank %}
        <div class="ph__sub rte">
          {{ section.settings.subheading }}
        </div>
      {% endif %}
    </div>

    <!-- IMAGE COLUMN -->
    <div class="ph__imgcol">
      <div class="ph__image-wrap">

        {% if section.settings.image %}
          <img class="ph__image" src="{{ section.settings.image | img_url: '1800x' }}" alt="{{ section.settings.image.alt | escape }}" loading="lazy">
        {% endif %}

        {% if section.settings.cta_chip_left_label != blank %}
          <a class="ph__chip ph__chip--left" href="{{ section.settings.cta_chip_left_url }}">{{ section.settings.cta_chip_left_label }}</a>
        {% endif %}

        {% if section.settings.cta_chip_right_label != blank %}
          <a class="ph__chip ph__chip--right" href="{{ section.settings.cta_chip_right_url }}">{{ section.settings.cta_chip_right_label }}</a>
        {% endif %}

        {% if section.settings.big_cta_label != blank %}
          <a class="ph__bigcta" href="{{ section.settings.big_cta_url }}">{{ section.settings.big_cta_label }}</a>
        {% endif %}

        {% if section.blocks.size > 0 %}
          <!-- Bullets sit directly beneath CTA -->
          <div class="ph__bullets">
            {% for block in section.blocks %}
              {% if block.type == 'bullet' %}
                <div class="ph__bullet" {{ block.shopify_attributes }}>
                  <svg class="ph__tick" viewBox="0 0 24 24" fill="none" aria-hidden="true">
                    <path d="M6 12.5l3.8 3.6L18 8.8" stroke="white" stroke-width="2.4" stroke-linecap="round" stroke-linejoin="round"/>
                  </svg>
                  {{ block.settings.text }}
                </div>
              {% endif %}
            {% endfor %}
          </div>
        {% endif %}

        <div class="ph__guarantee-line">{{ section.settings.guarantee_text }}</div>
      </div>
    </div>
  </div> {% endcomment %}
  <div class="hero-block">
    <picture>
      <source media="(min-width:1024px)" srcset="{{ section.settings.desk_hero | img_url:'master'}}">
      <img loading="lazy" alt="Hero Image Banner" src="{{ section.settings.image | img_url:'master' }}">
    </picture>
    <div class="top-portion desktop-hide">
      <div class="heading-html-block">
        <div class="trusted-container">
          {% unless section.settings.remove_social_proof %}
          <div class="trusted">
            <div class="trusted-pic">
              
              <img loading="lazy" alt="moms" src="{{ section.settings.trusted_pic | img_url:'medium' }}">
            </div>
            <div class="trusted-txt">
              {{ section.settings.trusted_txt }}
            </div>
          </div>
          {% endunless %}
        </div>
        <div class="heading-html">
          {{ section.settings.heading_html }}
        </div>
        <div class="white-fade">
          <div class="chips-row">
            {% if section.settings.cta_chip_left_label %}
            <a class="ph_chip" href="{{ section.settings.cta_chip_left_url }}">
              {{ section.settings.cta_chip_left_label }}
            </a>
            {% endif %}
            {% if section.settings.cta_chip_left_label %}
            <a class="ph_chip" href="{{ section.settings.cta_chip_right_url }}">
              {{ section.settings.cta_chip_right_label }}
            </a>
            {% endif %}
          </div>
        </div>
      </div>
    </div>
    <div class="bottom-portion desktop-hide">
      <div class="black-fade">
        <div class="cta-guarantee">
          <a class="btn main-cta" title="{{ section.settings.big_cta_label }}" href="{{ section.settings.big_cta_url }}">
            {{ section.settings.big_cta_label }}
          </a>
          <div class="guarantee-txt">
            {{ section.settings.guarantee_text }}
          </div>
        </div>
        <div class="bullet-points">
          {% for b in section.blocks %}
            {% if b.type == 'bullet' %}
            <div class="bullet-point">
              <div class="check">
                {%- render 'hero-check' -%}
              </div>
              <div class="bullet-text">
                {{ b.settings.text }}
              </div>
            </div>
            {% endif %}
          {% endfor %}
        </div>
      </div>
    </div>
    <div class="mobile-hide hero-banner-left">
      <div class="heading-html-block">
        <div class="trusted-container">
          {% unless section.settings.remove_social_proof %}
          <div class="trusted">
            <div class="trusted-pic">
              <img loading="lazy" alt="moms" src="{{ section.settings.trusted_pic | img_url:'medium' }}">
            </div>
            <div class="trusted-txt">
