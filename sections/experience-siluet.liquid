@media(min-width:990px){
  .ph__textcol {
    display: flex;
    text-align:left;
    align-items: center;
}
#pilates-{{ section.id }} .ph__heading p{
 text-align:left!important;
}

.ph__inner{ grid-template-columns:1.1fr 0.9fr; } }

/* Heading */
#pilates-{{ section.id }} .ph__heading p{
  font-size:clamp(28px,3vw,48px); font-weight:600; color:#111;
  line-height:1.2; text-align:center; margin:0 0 16px;
}
#pilates-{{ section.id }} .ph__heading em{ font-style:italic; color:var(--italic); font-weight:700; }
#pilates-{{ section.id }} .ph__heading strong{ color:var(--bold); font-weight:800; }
h2.ph__heading{ margin:15px 0 0; }

/* Subheading */
#pilates-{{ section.id }} .ph__sub p{ text-align:center; font-size:17px; margin:0 0 26px; }

/* Image */
.ph__imgcol{ position:relative; }
.ph__image-wrap{ position:relative; overflow:hidden;  }
.ph__image{ width:100%; display:block; }

/* Top Chips */
.ph__chip{
  position:absolute; top:14px; background:#CDA07A; color:#fff;
  font-weight:700; padding:6px 16px; border-radius:999px; font-size:15px;
  box-shadow:0 10px 24px rgba(0,0,0,.18);
}
.ph__chip--left{ left:14px; }
.ph__chip--right{ right:14px; }

/* CTA */
.ph__bigcta {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 15%;
    background: #CDA07A;
    color: #fff;
    padding: 6px 42px;
    font-weight: 800;
    border-radius: 14px;
    font-size: 20px;
    box-shadow: 0 12px 26px rgba(0, 0, 0, .22);
}

