{% doc %}
  @prompt
    Create a custom text section that can be easily customized with different text content and styling options
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-custom-text-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px {{ block.settings.padding_horizontal }}px {{ block.settings.padding_bottom }}px {{ block.settings.padding_horizontal }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-custom-text__content-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.font_size }}px;
    line-height: {{ block.settings.line_height }};
    font-weight: {{ block.settings.font_weight }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    {% if block.settings.font_family == 'heading' %}
      font-family: {{ settings.font_heading_family.family }}, {{ settings.font_heading_family.fallback_families }};
    {% elsif block.settings.font_family == 'body' %}
      font-family: {{ settings.font_body_family.family }}, {{ settings.font_body_family.fallback_families }};
    {% elsif block.settings.font_family == 'accent' %}
      font-family: {{ settings.font_accent_family.family }}, {{ settings.font_accent_family.fallback_families }};
    {% endif %}
    {% if block.settings.text_transform == 'uppercase' %}
      text-transform: uppercase;
    {% elsif block.settings.text_transform == 'lowercase' %}
      text-transform: lowercase;
    {% elsif block.settings.text_transform == 'capitalize' %}
      text-transform: capitalize;
    {% endif %}
    {% if block.settings.text_decoration == 'underline' %}
      text-decoration: underline;
    {% elsif block.settings.text_decoration == 'line-through' %}
      text-decoration: line-through;
    {% endif %}
  }

  .ai-custom-text__content-{{ ai_gen_id }} h1,
  .ai-custom-text__content-{{ ai_gen_id }} h2,
  .ai-custom-text__content-{{ ai_gen_id }} h3,
  .ai-custom-text__content-{{ ai_gen_id }} h4,
  .ai-custom-text__content-{{ ai_gen_id }} h5,
  .ai-custom-text__content-{{ ai_gen_id }} h6 {
    color: {{ block.settings.heading_color }};
    margin-top: 0;
    margin-bottom: {{ block.settings.heading_spacing }}px;
  }

  .ai-custom-text__content-{{ ai_gen_id }} p {
    margin-top: 0;
    margin-bottom: {{ block.settings.paragraph_spacing }}px;
  }

  .ai-custom-text__content-{{ ai_gen_id }} a {
    color: {{ block.settings.link_color }};
    text-decoration: {% if block.settings.link_underline %}underline{% else %}none{% endif %};
  }

  .ai-custom-text__content-{{ ai_gen_id }} a:hover {
    color: {{ block.settings.link_hover_color }};
  }

  .ai-custom-text__content-{{ ai_gen_id }} ul,
  .ai-custom-text__content-{{ ai_gen_id }} ol {
    margin-bottom: {{ block.settings.list_spacing }}px;
    padding-left: {{ block.settings.list_indent }}px;
  }

  .ai-custom-text__content-{{ ai_gen_id }} li {
    margin-bottom: {{ block.settings.list_item_spacing }}px;
  }

  .ai-custom-text__content-{{ ai_gen_id }} blockquote {
    border-left: {{ block.settings.blockquote_border_width }}px solid {{ block.settings.blockquote_border_color }};
    padding-left: {{ block.settings.blockquote_padding }}px;
    margin: {{ block.settings.blockquote_margin }}px 0;
    font-style: italic;
    color: {{ block.settings.blockquote_color }};
  }

  {% if block.settings.enable_drop_cap %}
    .ai-custom-text__content-{{ ai_gen_id }} p:first-of-type::first-letter {
      float: left;
      font-size: {{ block.settings.drop_cap_size }}em;
      line-height: 1;
      margin-right: 8px;
      margin-top: 2px;
      color: {{ block.settings.drop_cap_color }};
      font-weight: bold;
    }
  {% endif %}

  @media screen and (max-width: 749px) {
    .ai-custom-text-{{ ai_gen_id }} {
      padding: {{ block.settings.mobile_padding_top }}px {{ block.settings.mobile_padding_horizontal }}px {{ block.settings.mobile_padding_bottom }}px {{ block.settings.mobile_padding_horizontal }}px;
    }

    .ai-custom-text__content-{{ ai_gen_id }} {
      font-size: {{ block.settings.mobile_font_size }}px;
    }
  }
{% endstyle %}

<div
  class="ai-custom-text-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  {% if block.settings.text_content != blank %}
    <div class="ai-custom-text__content-{{ ai_gen_id }}">
      {{ block.settings.text_content }}
    </div>
  {% else %}
    <div class="ai-custom-text__content-{{ ai_gen_id }}">
      <p>Add your custom text content here. You can format it with headings, paragraphs, lists, and more using the rich text editor.</p>
    </div>
  {% endif %}
</div>

