{% doc %}
  @prompt
    Create a custom text section that can be easily customized with different text content and styling options. Hero Confirmation
    
    Heading: “You are booked”
    
    subtext line:
    “We hold a build slot from this month’s limited run for 48 hours so you can decide with calm.”
    
    What We Will Cover
    
    Three bullets, large type:
    • Your questions answered specs, delivery, trial
    • Payment and financing pay in full or monthly plan
    • Your build slot if it is a fit we assign one of this month’s 50
    
    Small line below: “No pressure. If Elevé Studio is not an exact fit we will say so and point you to the right next step.”
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-hero-confirmation-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px {{ block.settings.section_padding_horizontal }}px {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
    text-align: {{ block.settings.text_alignment }};
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-hero-confirmation__heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    font-weight: {{ block.settings.heading_weight }};
    margin: 0 0 {{ block.settings.heading_margin_bottom }}px;
    line-height: 1.2;
    {% if settings.font_heading_uppercase %}
      text-transform: uppercase;
      letter-spacing: {{ settings.font_uppercase_spacing | divided_by: 100.0 }}em;
    {% endif %}
  }

  .ai-hero-confirmation__subtext-{{ ai_gen_id }} {
    color: {{ block.settings.subtext_color }};
    font-size: {{ block.settings.subtext_size }}px;
    line-height: 1.5;
    margin: 0 0 {{ block.settings.subtext_margin_bottom }}px;
    max-width: {{ block.settings.subtext_max_width }}px;
    {% if block.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  .ai-hero-confirmation__section-title-{{ ai_gen_id }} {
    color: {{ block.settings.section_title_color }};
    font-size: {{ block.settings.section_title_size }}px;
    font-weight: {{ block.settings.section_title_weight }};
    margin: {{ block.settings.section_title_margin_top }}px 0 {{ block.settings.section_title_margin_bottom }}px;
    line-height: 1.3;
    {% if settings.font_heading_uppercase %}
      text-transform: uppercase;
      letter-spacing: {{ settings.font_uppercase_spacing | divided_by: 100.0 }}em;
    {% endif %}
  }

  .ai-hero-confirmation__bullets-{{ ai_gen_id }} {
    list-style: none;
    padding: 0;
    margin: 0 0 {{ block.settings.bullets_margin_bottom }}px;
  }

  .ai-hero-confirmation__bullet-item-{{ ai_gen_id }} {
    color: {{ block.settings.bullet_color }};
    font-size: {{ block.settings.bullet_size }}px;
    line-height: 1.4;
    margin-bottom: {{ block.settings.bullet_spacing }}px;
    position: relative;
    padding-left: {{ block.settings.bullet_indent }}px;
  }

  .ai-hero-confirmation__bullet-item-{{ ai_gen_id }}:before {
    content: "•";
    color: {{ block.settings.bullet_point_color }};
    font-size: {{ block.settings.bullet_size }}px;
    position: absolute;
    left: 0;
    top: 0;
  }

  .ai-hero-confirmation__small-text-{{ ai_gen_id }} {
    color: {{ block.settings.small_text_color }};
    font-size: {{ block.settings.small_text_size }}px;
    line-height: 1.4;
    margin: 0;
    max-width: {{ block.settings.small_text_max_width }}px;
    {% if block.settings.text_alignment == 'center' %}
      margin-left: auto;
      margin-right: auto;
    {% endif %}
  }

  @media screen and (max-width: 749px) {
    .ai-hero-confirmation-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.7 | round }}px {{ block.settings.section_padding_horizontal | times: 0.7 | round }}px {{ block.settings.section_padding_bottom | times: 0.7 | round }}px;
    }

    .ai-hero-confirmation__heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 | round }}px;
    }

    .ai-hero-confirmation__subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_size | times: 0.9 | round }}px;
    }

    .ai-hero-confirmation__section-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.section_title_size | times: 0.85 | round }}px;
    }

    .ai-hero-confirmation__bullet-item-{{ ai_gen_id }} {
      font-size: {{ block.settings.bullet_size | times: 0.9 | round }}px;
    }

    .ai-hero-confirmation__small-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.small_text_size | times: 0.9 | round }}px;
    }
  }
{% endstyle %}

<div class="ai-hero-confirmation-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  {% if block.settings.heading != blank %}
    <h1 class="ai-hero-confirmation__heading-{{ ai_gen_id }}">
      {{ block.settings.heading }}
    </h1>
  {% endif %}

  {% if block.settings.subtext != blank %}
    <div class="ai-hero-confirmation__subtext-{{ ai_gen_id }}">
      {{ block.settings.subtext }}
    </div>
  {% endif %}

  {% if block.settings.section_title != blank %}
    <h2 class="ai-hero-confirmation__section-title-{{ ai_gen_id }}">
      {{ block.settings.section_title }}
    </h2>
  {% endif %}

  {% if block.settings.bullet_1 != blank or block.settings.bullet_2 != blank or block.settings.bullet_3 != blank %}
    <ul class="ai-hero-confirmation__bullets-{{ ai_gen_id }}">
      {% if block.settings.bullet_1 != blank %}
        <li class="ai-hero-confirmation__bullet-item-{{ ai_gen_id }}">
          {{ block.settings.bullet_1 }}
        </li>
      {% endif %}
      {% if block.settings.bullet_2 != blank %}
        <li class="ai-hero-confirmation__bullet-item-{{ ai_gen_id }}">
          {{ block.settings.bullet_2 }}
        </li>
      {% endif %}
      {% if block.settings.bullet_3 != blank %}
        <li class="ai-hero-confirmation__bullet-item-{{ ai_gen_id }}">
          {{ block.settings.bullet_3 }}
        </li>
      {% endif %}
    </ul>
  {% endif %}

  {% if block.settings.small_text != blank %}
    <div class="ai-hero-confirmation__small-text-{{ ai_gen_id }}">
      {{ block.settings.small_text }}
    </div>
  {% endif %}
</div>

